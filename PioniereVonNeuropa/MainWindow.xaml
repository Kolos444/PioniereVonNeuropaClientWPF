<Window x:Class="PioniereVonNeuropa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PioniereVonNeuropa"
        mc:Ignorable="d"
        Title="MainWindow" Width="1280" Height="720">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="4*" />
			<ColumnDefinition Width="300" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="4*" />
			<RowDefinition Height="200" />
		</Grid.RowDefinitions>
		<Canvas Name="CanvasBoard"></Canvas>
		<GroupBox Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Header="Malen mit">
			<StackPanel>
				<Button Click="ButtonLandClick" Width="100" Height="30">Land</Button>
				<Button Click="ButtonWasserClick" Width="100" Height="30">Wasser</Button>
				<Button Click="ButtonHafenClick" Width="100" Height="30">Möglicher Hafen</Button>
				<Button Click="ButtonDefinitiverHafenClick" Width="100" Height="30">Definitiver Hafen</Button>
			</StackPanel>
		</GroupBox>
		<Button Grid.Row="1" Grid.Column="0">Test</Button>
	</Grid>
</Window>